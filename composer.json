{
    "name": "pinixel/version",
    "description": "Take control over your Laravel app version",
    "keywords": [
        "laravel",
        "version",
        "versioning"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Hansen Makangiras",
            "email": "hansenmakangiras@gmail.com",
            "role": "Web Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "laravel/framework": ">=9.0",
        "pragmarx/yaml": "^1.0",
        "symfony/process": "^3.3|^4.0|^5.0|^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5|~6|~7|~8|~9|~10",
        "orchestra/testbench": "3.4.*|3.5.*|3.6.*|3.7.*|4.*|5.*|6.*|7.*|8.*"
    },
    "autoload": {
        "psr-4": {
            "Pinixel\\Version\\Package\\": "src/package",
            "Pinixel\\Version\\Tests\\": "tests/"
        }
    },
    "extra": {
        "component": "package",
        "laravel": {
            "providers": [
                "Pinixel\\Version\\Package\\ServiceProvider"
            ],
            "aliases": {
                "Version": "Pinixel\\Version\\Package\\Facade"
            }
        }
    },
    "scripts": {
        "test": [
            "@composer install",
            "vendor/bin/phpunit"
        ]
    }
}
